<Page x:Class="SFS_Tool_Management.Views.AdminOptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SFS_Tool_Management.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminOptionPage">

    <Grid Background="#FFECECEC" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="사용자 목록"
               FontSize="24"
               FontWeight="Bold"
               Margin="10"
               Grid.Row="0"/>
        <DataGrid x:Name="UserDataGrid"
              AutoGenerateColumns="true"
              IsReadOnly="True"
              Margin="10"
              Grid.Row="1">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="삭제" Click="DeleteUser_Click"/>
                    <MenuItem Header="복원하기" Click="RestoreUser_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Page>
