<Page x:Class="SFS_Tool_Management.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SFS_Tool_Management.Views"
      xmlns:styles="clr-namespace:SFS_Tool_Management.Styles"
      xmlns:model="clr-namespace:SFS_Tool_Management.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">
    
    <Page.DataContext>
        <model:DashboardViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Summary" Margin="10" FontFamily="Segoe UI" FontSize="20" FontWeight="DemiBold"/>
            <Line X1="10" Y1="10" X2="1000" Y2="10" Stroke="LightGray" StrokeThickness="2"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <styles:SummaryCard Margin="5" Title="Total tools" Count="{Binding TotalToolCount}" BackgroundBrush="#98D8AA"/>
                <styles:SummaryCard Margin="5" Title="Available tools" Count="{Binding AvailableToolCount}" BackgroundBrush="#98D8AA"/>
                <styles:SummaryCard Margin="5" Title="Tools under repair" Count="{Binding RepairingToolCount}" BackgroundBrush="#F3E99F"/>
                <styles:SummaryCard Margin="5" Title="Tools on rental" Count="{Binding RentedToolCount}" BackgroundBrush="#F7D060"/>
            </StackPanel>
            <Button Command="{Binding GetDataCommand}" Width="50" Height="50"/>
        </StackPanel>
        
        
    </Grid>
</Page>
