<Window x:Class="SFS_Tool_Management.EditToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="공구 수정" Height="600" Width="400" WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="공구 ID" Margin="0,5,0,0"/>
            <TextBox x:Name="ToolIDTextBox" Margin="0,0,0,5" IsReadOnly="True"/>

            <TextBlock Text="공구 유형" Margin="0,5,0,0"/>
            <TextBox x:Name="ToolTypeTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="모델명" Margin="0,5,0,0"/>
            <TextBox x:Name="ModelNameTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="제조사" Margin="0,5,0,0"/>
            <TextBox x:Name="ManufactureTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="총 수량" Margin="0,5,0,0"/>
            <TextBox x:Name="TotalQuantityTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="사용 가능 수량" Margin="0,5,0,0"/>
            <TextBox x:Name="AvailableQuantityTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="구매일자" Margin="0,5,0,0"/>
            <DatePicker x:Name="PurchaseDatePicker" Margin="0,0,0,5"/>

            <TextBlock Text="내구 연한" Margin="0,5,0,0"/>
            <DatePicker x:Name="DurabilityLimitPicker" Margin="0,0,0,5"/>

            <TextBlock Text="상태" Margin="0,5,0,0"/>
            <TextBox x:Name="StatusTextBox" Margin="0,0,0,5"/>
        </StackPanel>

        <Button Content="저장" Grid.Row="1"
                HorizontalAlignment="Right"
                Width="100" Margin="0,20,0,0"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
