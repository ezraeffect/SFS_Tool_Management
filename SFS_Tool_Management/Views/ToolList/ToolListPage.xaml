<Page x:Class="SFS_Tool_Management.Views.ToolListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SFS_Tool_Management.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToolListPage">

    <Grid Background="#FFECECEC" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="공구 목록"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="10"
                   Grid.Row="0"/>
        <DataGrid x:Name="ToolDataGrid"
                  AutoGenerateColumns="true"
                  IsReadOnly="True"
                  Margin="10"
                  Grid.Row="1">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="수정" Click="EditTool_Click"/>
                    <MenuItem Header="삭제" Click="DeleteTool_Click"/>
                </ContextMenu>

            </DataGrid.ContextMenu>
        </DataGrid>
        <Button Content="추가"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Click="AddToolButton_Click"
                Grid.Row="1"/>

    </Grid>

</Page>
