<UserControl x:Class="SFS_Tool_Management.Styles.ToastMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFS_Tool_Management.Styles"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="700">
    <Grid>
        <Canvas Width="Auto" Height="Auto">
            <Border x:Name="BackgroundBorder" Width="700" Height="45" CornerRadius="10" Background="#eae9ea">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="3" Color="Gray" />
                </Border.Effect>
            </Border>
            <Grid Height="45" Width="700" >
                <!-- Grid 선언 영역 -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 아이콘 영역 -->
                <Viewbox Grid.Column="0" VerticalAlignment="Center" Margin="10" Width="24" Height="24">
                    <Path Width="24" Height="24" Data="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Fill="{Binding Color, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </Viewbox>
                
                <!-- 메세지 영역 -->
                <TextBlock Grid.Column="1" x:Name="TitleText" VerticalAlignment="Center"
                   FontFamily="Segoe UI" FontSize="15" FontWeight="Medium" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                <!-- 닫기 버튼 영역 -->
                <Button Grid.Column="2" Height="24" Width="24" Margin="10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ControlTemplate.Resources>
                                <Geometry x:Key="CloseIcon">m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z</Geometry>
                                <Style TargetType="{x:Type Border}" x:Key="IN.BORDER">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="#CDCDCE"/>
                                    <Setter Property="CornerRadius" Value="24"/>
                                </Style>
                                <Style TargetType="{x:Type Viewbox}" x:Key="IN.VBOX">
                                    <Setter Property="Width" Value="8"/>
                                    <Setter Property="Height" Value="8"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="{x:Type Path}" x:Key="IN.PATH">
                                    <Setter Property="Data" Value="{StaticResource CloseIcon}"/>
                                    <Setter Property="Width" Value="8"/>
                                    <Setter Property="Height" Value="8"/>
                                    <Setter Property="Stretch" Value="Uniform"/>
                                    <Setter Property="Fill" Value="#000000"/>
                                </Style>
                            </ControlTemplate.Resources>
                            <Border x:Name="border" Style="{StaticResource IN.BORDER}">
                                <Grid>
                                    <Viewbox Style="{StaticResource IN.VBOX}">
                                        <Path Style="{StaticResource IN.PATH}"/>
                                    </Viewbox>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#d7d7d7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#c7c7c7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Canvas>
    </Grid>
</UserControl>
